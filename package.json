{
    "name": "splunk-stdio-collector",
    "version": "1.0.0",
    "description": "Send logs from input stream to splunk",
    "author": "Borui Gu",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/BoruiGu/splunk-stdio-collector.git"
    },
    "keywords": [
        "splunk",
        "logging"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/BoruiGu/splunk-stdio-collector/issues"
    },
    "homepage": "https://github.com/BoruiGu/splunk-stdio-collector#readme",
    "bin": {
        "ssc": "dist/cli.js",
        "splunk-stdio-collector": "dist/cli.js"
    },
    "files": [
        "dist"
    ],
    "type": "module",
    "engines": {
        "node": ">=16.13.0"
    },
    "scripts": {
        "build": "esbuild src/*.ts --outdir=dist --sourcemap",
        "dev": "npm run build -- --watch",
        "test": "tsc && node --experimental-vm-modules node_modules/jest/bin/jest.js"
    },
    "dependencies": {
        "meow": "^10.1.2",
        "splunk-logging": "^0.11.1",
        "strip-ansi": "^7.0.1"
    },
    "devDependencies": {
        "@types/jest": "^27.0.3",
        "@types/node": "^16.11.11",
        "@types/splunk-logging": "^0.11.0",
        "esbuild": "^0.14.1",
        "execa": "^6.0.0",
        "husky": "^7.0.4",
        "jest": "^27.4.3",
        "lint-staged": "^12.1.2",
        "prettier": "^2.5.0",
        "ts-jest": "^27.0.7",
        "tsm": "^2.2.1",
        "typescript": "^4.5.2"
    },
    "jest": {
        "__comment": "not collect coverage due to istanbul esm issue https://github.com/istanbuljs/istanbuljs/issues/614",
        "collectCoverage": false,
        "coverageReporters": [
            "text-summary",
            "html-spa"
        ],
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}"
        ],
        "transform": {
            "\\.[jt]sx?$": "ts-jest"
        },
        "extensionsToTreatAsEsm": [
            ".ts"
        ],
        "globals": {
            "ts-jest": {
                "useESM": true
            }
        },
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        }
    }
}

        "jest": "^27.4.3",
        "ts-jest": "^27.0.7",
        "typescript": "^4.5.2"
    },
    "jest": {
        "transform": {
            "\\.[jt]sx?$": "ts-jest"
        },
        "extensionsToTreatAsEsm": [
            ".ts"
        ],
        "globals": {
            "ts-jest": {
